<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#00ff00" >

    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_weight="3" >

        <LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="bottom"
        	android:layout_marginLeft="33dp"
        	android:orientation="vertical" >

            <Button
            	android:id="@+id/dead_yes"
            	style="@style/dead_button"
            	android:text="@string/yes"
            	android:onClick="click" />

            <Button
            	android:id="@+id/dead_no"
            	style="@style/dead_button"
            	android:text="@string/no"
            	android:onClick="click"/>

        </LinearLayout>

        <ImageView
        	android:id="@+id/dead_monster_image"
        	style="@style/dead_imageview"
        	android:src="@drawable/kimokawa" />

    </LinearLayout>

    <TextView
    	android:id="@+id/dead_textview"
    	style="@style/dead_text"
    	android:background="@drawable/border"
    	android:text="TextView"/>

</LinearLayout>
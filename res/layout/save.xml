<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#00ff00"
              android:orientation="horizontal"
              android:id="@+id/baseLayout" >

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingTop="25px"
                  android:paddingLeft="25px"
                  >
      <LinearLayout
          android:layout_width="240px"
          android:layout_height="320px"
          android:orientation="vertical"



>

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/kimokawa"
            android:clickable="true"
            android:onClick="debugClick"

/>
      </LinearLayout>

      <LinearLayout
          android:layout_width="265px"
          android:layout_height="285px"
          android:layout_marginLeft="25px"
          android:background="#DDDDDD"
          android:baselineAligned="false"
          android:radius="2px" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:layout_margin="3px"


>

          <TableLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              >

            <TableRow
                android:layout_weight="1"
                android:gravity="center">

              <TextView
                  android:id="@+id/hp_text"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="　　   HP :"
                  android:textSize="20sp"
                  android:textColor="#FFFFFF"/>


              <TextView
                  android:id="@+id/hp_view"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="56"
                  android:textSize="20sp"
                  android:textColor="#FFFFFF"/>

            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_weight="1">

              <TextView
                  android:id="@+id/atk_text"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="こうげき :"
                  android:textSize="20sp"
                  android:textColor="#FFFFFF"/>


              <TextView
                  android:id="@+id/atk_view"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="13"
                  android:textSize="20sp"
                  android:textColor="#FFFFFF"/>

            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_weight="1">

              <TextView
                  android:id="@+id/spd_text"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="すばやさ :"
                  android:textSize="20sp"
                  android:textColor="#FFFFFF"/>


              <TextView
                  android:id="@+id/spd_view"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="5"
                  android:textSize="20sp"
                  android:textColor="#FFFFFF"/>

            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_weight="1">

              <TextView
                  android:id="@+id/tru_text"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="なつき度 :"
                  android:textSize="20sp"
                  android:textColor="#FFFFFF"/>


              <TextView
